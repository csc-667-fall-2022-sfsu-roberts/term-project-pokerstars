extends layout

block append head 
  link(rel="stylesheet", href="/public/stylesheets/login.css")

block content
  div.text-center
    form(class="form-login" action="/login" method="POST")
      - var h1Class = ['h3', 'mb-3', 'font-weight-normal'];
      h1(class=h1Class) Please Login
      
      div
        label(for="username")
        input(type="text" name="username" placeholder="Username" class="form-input")

      div
        label(for="password")
        input(type="password" name="password" placeholder="Password" class="form-input")

      div
        - var buttonLogin=['btn', 'btn-lg', 'btn-primary','btn-block'];
        button(class=buttonLogin type="submit") Login 